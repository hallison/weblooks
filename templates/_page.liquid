    <div class="post">

      <h1 id="post-title">{{ article.title }}</h1>

      <div id="post-body">
      {{ article.body }}
      </div>

      <div id="post-metadata">
        <span>Posted by {{ article.author.login }} at {{ article.published_at | date: '%Y.%m.%d %H:%M:%S' }} in {{ article | linked_section_list }}</span>
        {% unless mode == 'single' %}
          {% if article.accept_comments %}<a href="{{ article.url }}#comments">{{ article.comments_count | pluralize: 'comments' }} &#187;</a>{% endif %}
        {% endunless %}
      </div><!--post-metadata-->

    </div><!--post-->

